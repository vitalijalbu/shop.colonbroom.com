<!-- templates/customers/activate_account.liquid -->

<section>
  <div class="py-24
    {{ settings.layout_horizontal }}
    {{ settings.layout_alignment }}">
    <div class="w-full max-w-prose">

      <h1>
        {{ 'actions.activate' | t }}
      </h1>

      {% form 'activate_customer_password' %}
      
        {% if form.errors %}
          <div class="p-2 mt-2 mb-4 color__bg-overlay-1 type--small border--radius">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <label 
          for="password">
          {{ 'labels.password' | t }}
        </label>
        <input 
          id="password" 
          class="mb-4" 
          type="password" 
          name="customer[password]">
        
        <label 
          for="password_confirmation">
          {{ 'labels.password_confirmation' | t }}
        </label>
        <input 
          id="password_confirmation" 
          class="mb-4" 
          type="password" 
          name="customer[password_confirmation]">

        <div class="flex flex-wrap items-center gap-2 mb-4">
          <button 
            class="btn"
            type="submit">
            {{ 'actions.activate' | t }}
          </button>
          <span class="px-2">{{ 'labels.or' | t }}</span>
          <button
            class="btn btn--secondary"
            type="submit" 
            name="decline">
            {{ 'actions.decline_invitation' | t }}
          </button>
        </div>

        <div class="pt-4 border--t-width color__border-divider-1">
          <p>{{ 'info.already_have_account' | t }}</p>
          <a 
            href="{{ routes.account_login_url }}" 
            class="btn btn--plain">
            {{ 'actions.log_in' | t }}
          </a>
        </div>
        
      {% endform %}

    </div>
  </div>
</section>