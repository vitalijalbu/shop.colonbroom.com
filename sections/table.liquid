<!-- sections/table.liquid -->
{% comment %}
  Table that can be used to show brand comparison and feature lists.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.
{% endcomment %}

{% liquid
  assign table_headings = section.settings.table_headings | split: ','
  assign column_border = section.settings.style_column_border | plus: 0
%}

<section
  id="{{ section.id }}"
  class="
    {{ section.settings.visibility }}
    {{ section.settings.color_scheme }} 
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}">
  <div
    class="{{ settings.layout_horizontal }}"
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    ">
    <div
      class="flex flex-wrap items-start justify-between">

      {% comment %} Header {% endcomment %}
      <div
        class="flex flex-col w-full "
      >
        {% render 'component__section-header' %}
      </div>

      {% comment %} Content {% endcomment %}
      <div
        class="flex flex-col flex-wrap w-full gap-4 "
      >
        <div class="flex flex-col w-full">
          {% comment %} Headings {% endcomment %}
          <div
            class="
              sticky top-0 z-10 flex-row flex-wrap hidden gap-2 md:flex border--b-width color__border-divider-1 md:flex-nowrap
              {% unless section.settings.color_scheme == 'custom' %}
                {{ section.settings.color_scheme }}
              {% endunless %}
            "
            {% if section.settings.color_scheme == 'custom' %}
              style="
                                background:{{ section.settings.color_background }};
              "
            {% endif %}
          >
            <div class="flex-grow w-full md:max-w-[45%]"></div>
            {% for heading in table_headings %}
              <div
                class="
                  flex-1 p-4 type__heading type__heading-5 border--radius !rounded-b-none
                  {{ forloop.index }}
                  {% if column_border == forloop.index %}
                    border--width color__border-primary color__bg-neutral !border-b-0
                  {% endif %}
                "
              >
                {{ heading }}
              </div>
            {% endfor %}
          </div>

          {% comment %} Table {% endcomment %}
          <div class="relative flex flex-col w-full">
            {% for block in section.blocks %}
              <div
                class="
                  relative flex flex-row flex-wrap items-stretch gap-2 border--b-width color__border-divider-1 md:flex-nowrap py-4 md:p-0
                  {{ block.settings.color_scheme }}
                "
                {% if section.settings.color_scheme == 'custom' %}
                  style="
                                        background:{{ section.settings.color_background }};
                  "
                {% endif %}
              >
                <div class="flex-grow w-full md:max-w-[45%] group flex items-center">
                  {% unless block.settings.icon == blank %}
                    {% render 'component__icon',
                      icon: block.settings.icon,
                      size: '20',
                      class: 'mr-2'
                    %}
                  {% endunless %}
                  {{ block.settings.label }}
                  {% unless block.settings.tooltip == blank %}
                    {% render 'component__tooltip',
                      content: block.settings.tooltip,
                      color: 'secondary'
                    %}
                  {% endunless %}
                </div>
                {% for heading in table_headings %}
                  {% capture column_content %}column_{{ forloop.index }}_content{% endcapture %}
                  {% capture column_icon %}column_{{ forloop.index }}_icon{% endcapture %}
                  <div
                    class="
                      md:flex-1 md:p-4 w-full flex justify-between items-center md:justify-start
                      {% if column_border == forloop.index %}
                        md:border--width md:color__border-primary !border-y-0 md:color__bg-neutral
                      {% endif %}
                    "
                  >
                    <span class="opacity-50 md:hidden">{{ heading }}</span>
                    <div class="flex items-center gap-2">
                      {% unless block.settings[column_icon] == blank %}
                        {% render 'component__icon',
                          icon: block.settings[column_icon],
                          size: '20',
                          class: ''
                        %}
                      {% endunless %}
                      {% unless block.settings[column_content] == blank %}
                        <span>{{ block.settings[column_content] }}</span>
                      {% endunless %}
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>

