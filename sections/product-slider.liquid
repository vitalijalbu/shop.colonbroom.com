<!-- sections/product-slider.liquid -->
{% comment %} 
  Slider of products.

  Globals:
    - settings.layout_horizontal: horizontaly margin
{% endcomment %}

{% comment %} Card width snippet {% endcomment %}
{% capture card_width %}
  {% if section.settings.card_width_desktop == 12 %}
    md:w-full
  {% else %}
    md:w-{{ section.settings.card_width_desktop }}/12
  {% endif %}
 {% if section.settings.card_width_mobile == 12 %}
    w-full
  {% else %}
    w-{{ section.settings.card_width_mobile }}/12
  {% endif %} 
{% endcapture %}

{% comment %} Capture slider content {% endcomment %}
{% capture slides %}

  {% comment %} Placeholders {% endcomment %}
  {% if section.settings.collection == blank %}
    {% assign slider_size = collections['all'].products.size | at_most: section.settings.products_count | minus: 1 %}
    {% for product in collections['all'].products limit: section.settings.products_count %}
      <div 
        class=" 
          md:snap-start flex justify-center flex-none whitespace-normal
          {{ card_width }}
        " 
        x-bind:data-slide="{{ forloop.index0 }}">
        {% render 'component__product-item', product: product %}
      </div>
    {% endfor %}

  {% comment %} Products {% endcomment %}
  {% else %}
    {% assign slider_size = collections[section.settings.collection].products.size | at_most: section.settings.products_count | minus: 1 %}
    {% for product in collections[section.settings.collection].products limit: section.settings.products_count %}
      <div
        class=" 
          md:snap-start flex justify-center flex-none whitespace-normal
          {{ card_width }}
        " 
        x-bind:data-slide="{{ forloop.index0 }}">
        {% render 'component__product-item', product: product, source: 'prod-slider' %}
      </div>
    {% endfor %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'card' %}
          <div 
            class=" 
              md:snap-start flex justify-center flex-none whitespace-normal
              {{ card_width }}
            " 
            x-bind:data-slide="{{ collections[section.settings.collection].products.size | at_most: section.settings.products_count }}">
            {% render 'component__content-item',
              url: block.settings.url,
              title: block.settings.heading,
              content: block.settings.content,
              button_label: block.settings.button_label, 
              size_desktop: block.settings.column_size,
              image: block.settings.image,
              background_image: block.settings.image_background,
              background_color: block.settings.background_color_scheme,
              video: block.settings.video,
              enable_autoplay: block.settings.enable_autoplay,
              enable_mute_toggle: block.settings.enable_mute_toggle,
              enable_loop: block.settings.enable_loop,
              color_border: block.settings.color_border,
              color_button: block.settings.color_button 
            %}
          </div>
      {% endcase %}
    {% endfor %}
  {% endif %}

{% endcapture %}

<section class="
  {{ section.settings.visibility }}
  {{ section.settings.color_scheme }} 
  {{ section.settings.color_border }}
  {{ section.settings.style_border }}">
  <div class="!px-0 {{ settings.layout_horizontal }}" 
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;">

    {% render 'component__section-header',
      container_class: 'px-4' 
    %} 
    
    {% render 'component__slider',
      show_arrows_over: true,
      slider_size: slider_size,
      slides: slides 
    %} 

  </div>
</section>

