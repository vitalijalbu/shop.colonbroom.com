    {
      "type":"linked_products",
      "name":"t:sections.product_main.blocks.linked_products.name",
      "limit":1,
      "settings":[
        {
          "type":"paragraph",
          "content":"t:general.paragraphs.product_linking.content"
        },
        {
          "type":"header",
          "content":"t:general.headers.color.content"
        },
        {
