      "type":"header",
      "content":"t:general.headers.layout.content"
    },
    {
      "type":"select",
      "id":"layout_gallery_size",
      "label":"t:general.settings.layout_gallery_size.label",
      "info":"t:general.settings.layout_gallery_size.info",
      "options":[
        {
          "value":"w-full md:w-1/3",
          "label":"t:general.settings.layout_gallery_size.one_third.label"
        },
        {
