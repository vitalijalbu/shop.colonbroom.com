<!-- sections/article__main.liquid -->
{% comment %} 
  Main contents of an article.

  Globals:
    - settings.layout_horizontal: horizontaly margin

  Possible enhancements:
    - Add alternative layout options. Center article or right align.
    - Add addititional blocks to highlight products in the article.

  Pro tips:
    - Use each section to change the content you want to display for articles.
{% endcomment %}

<section class="
  {{ section.settings.color_scheme }} 
  {{ section.settings.color_border }}
  {{ section.settings.style_border }}"
  style="
  padding-top:{{ section.settings.spacing_top }}px;
  padding-bottom:{{ section.settings.spacing_bottom }}px;" >

  <div class="flex
    {{ settings.layout_horizontal }}
    {{ settings.layout_alignment }}">

    <div class="max-w-prose w-full">
      {% for block in section.blocks %}
        {% case block.type %}

          {% when 'breadcrumb' %}
            {% render 'article__breadcrumb',
              blocksettings: block.settings %}
            
          {% when 'content' %}
            {% render 'article__content', 
              blocksettings: block.settings %}

          {% when 'share' %}
            {% render 'article__share', 
              blocksettings: block.settings %}

          {% when 'comment' %}
            {% render 'article__comment',
              blocksettings: block.settings %}

        {% endcase %}
      {% endfor %}
    </div>
    
  </div>
  
</section>

