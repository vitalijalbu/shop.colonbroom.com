<!-- snippets/product__accordion.liquid -->
{% comment %} 
  Accordion block for product sections.

  Accepts:
    - blocksettings: liquid object of block settings
  
  Usage:
    {% render 'product__accordion', 
      blocksettings: block.settings %}
  
  Pro tips:
    - Create and use metafields to display addtional product data here.
{% endcomment %}

{% capture container_class %}
  px-4 {{ blocksettings.style_border }} {{ blocksettings.color_border }} {{ blocksettings.color_scheme }}
{% endcapture %}
{% render 'component__accordion', 
  open: blocksettings.enable_open,
  container_class: container_class,
  inner_class: 'mb-4',
  button_label: blocksettings.title, 
  content: blocksettings.content
  icon: blocksettings.icon %}