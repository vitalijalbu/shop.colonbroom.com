<!-- snippets/addresses__select.liquid -->
{% comment %} 
  Used on customer account pages.

  Accepts:
    id: unique string to set id
    label: string to set input label
    placeholder: string to set input placeholder
    name: string to set input name
    options: set of options to populate select
    attributes: string to set additional attributes

  Usage:
    {% render 'addresses__select',
      id: form_country_id,
      label: country_label
      placeholder: country_placeholder,
      name: 'address[country]'
      options: country_option_tags,
      attributes: attr %}

  Possible enhancements:
    - Update snippet so this can be used for all inputs.
{% endcomment %}

{% capture uid %}
  select{{ name | default: label }}
{% endcapture %}

{% capture container_class %}
{% endcapture %}

<div class='{{ container_class }}' style='{{ style }}'>
  <label class="block" for='{{ id }}'>{{ label }}</label>
  <select
    data-product-select
    id='{{ id }}'
    class='form-select'
    name='{{ name | default: label | strip }}'
    value='{{ value }}'
    {% if required %}
      required
    {% endif %}
    {{ attributes }}>
    {% if placeholder %}
      <option disabled>{{ placeholder }}</option>
    {% endif %}
    {{ options }}
  </select>
</div>

{% assign id = blank %}
{% assign style = blank %}
{% assign label = blank %}
{% assign name = blank %}
{% assign value = blank %}
{% assign required = blank %}
{% assign placeholder = blank %}
{% assign options = blank %}
{% assign attributes = blank %}
